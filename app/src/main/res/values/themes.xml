<resources>
    <!-- Base application theme. -->
    <style name="Theme.TaskSex" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0CEAD4</item>
        <item name="colorOnPrimary">@color/custom_teal</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#272525</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ToolBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/low_black</item>
        <item name="android:textColorSecondary">@color/teal_700</item>
    </style>

    <style name="Theme.TaskSex.NoActionBar">
        <item name="colorPrimaryDark">#EEB300</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TaskSex.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TaskSex.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>